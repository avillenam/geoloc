    <TextView
        android:id="@+id/txt_type"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="Type:"
        android:textSize="14sp"
